.container
	.well
		span Bestellung bei 
		strong {{ menu.name }} 
		span  organisiert von 
		strong {{ order.user.username }}

	.panel.panel-primary.top-space-10
		.panel-heading 
			h3.panel-title Meine Bestellung
		.panel-body
			.padding-5
				.row(ng-show="order.order_items && order.order_items.length")
					.col-md-12
						table.table.table-striped
							tfoot
								tr
									td
									td
									td
									td.order-sum Summe:
									td 
										strong {{ order_sum }} €
									td

							tr(ng-repeat="order_item in order.order_items")
								td {{order_item.order_number}}
								td {{order_item.name}}
								td 
									small.text-muted {{order_item.description}}
								td 
									.input-group
										input.form-control.input-sm(id="{{::order_item.id}}", type="text", value="{{::order_item.specials}}", placeholder="Extra-Wünsche")
										span.input-group-btn
											button.btn.btn-primary.btn-sm(ng-click="saveSpecials(order_item, order_item.id)") 
												i.fa.fa-key.fa.fa-fw										
								td {{order_item.price}} €
								td 
									button.btn.btn-warning.btn-sm.btn-order(type='submit', ng-click="removeOrderItem(order, item)") +

	.panel.panel-primary.top-space-10
		.panel-heading 
			h3.panel-title Favoriten
		.panel-body
			.padding-5
				.row
					.col-md-12
						table.table.table-striped.table-condensed
							tr(ng-repeat="item in favorites")
								td {{item.order_number}}
								td {{item.name}}
								td 
									small.text-muted {{item.description}}
								td {{item.price}} €
								td 
									button.btn.btn-primary.btn-xs.btn-order(type='submit', ng-click="addOrderItem(order, item)") +

	.panel.panel-primary.top-space-10
		.panel-heading 
			h3.panel-title Alle Gerichte
		.panel-body
			.padding-5
				.row
					.col-md-12
						form.hidden-print
							.form-group
								.input-group
									.input-group-addon
										i.glyphicon.glyphicon-search
									input.form-control(type="text", placeholder="Hier kannst du nach allem suchen. Gerichten, Zutaten...", ng-model="search")

				table.table.table-striped.table-condensed
					tr(ng-repeat="item in menu.items | orderBy:'-order_count' | filter:search")
						td {{item.order_number}}
						td {{item.name}}
						td 
							small.text-muted {{item.description}}
						td {{item.price}} €
						td 
							button.btn.btn-primary.btn-xs.btn-order(type='submit', ng-click="addOrderItem(order, item)") +

